---
import Breadcrumbs from "@components/Breadcrumbs.astro";

interface Props {
  pageTitle: string;
  pageDesc?: string;
}

const { pageTitle, pageDesc } = Astro.props;
---

<Breadcrumbs />
<main id="photo-content">
  <h1>{pageTitle}</h1>
  <p>{pageDesc}</p>
  <slot />
</main>

<style>
  #photo-content {
    @apply mx-auto w-full max-w-7xl px-4 pb-4;
  }
  #photo-content h1 {
    @apply text-2xl font-semibold sm:text-3xl;
  }
  #photo-content p {
    @apply mb-6 mt-2 italic;
  }
</style>
