---
import Breadcrumbs from "@components/Breadcrumbs.astro";

interface Props {
  pageTitle: string;
  pageDesc?: string;
}

const { pageTitle, pageDesc } = Astro.props;
---

<Breadcrumbs />
<main id="photo-content">
  <h1>{pageTitle}</h1>
  <p>{pageDesc}</p>
  <slot />
</main>

<style>
  #photo-content {
    @apply mx-auto w-full max-w-6xl px-6 pb-8 sm:px-8;
  }
  #photo-content h1 {
    @apply text-2xl font-bold sm:text-3xl font-serif mb-4;
    line-height: 1.3;
  }
  #photo-content p {
    @apply mb-8 mt-3 italic text-skin-base opacity-80 leading-relaxed;
  }
</style>
